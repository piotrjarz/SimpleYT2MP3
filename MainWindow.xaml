<Window x:Class="SimpleYT2MP3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleYT2MP3"
        mc:Ignorable="d"
        Title="YouTube to MP3 Converter" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!--App title-->
            <RowDefinition Height="Auto" /> <!--Link input-->
            <RowDefinition Height="Auto" /> <!--Save location-->
            <RowDefinition Height="Auto" /> <!--Download button-->
            <RowDefinition Height="Auto" /> <!--Status Label-->
            <RowDefinition Height="*" /> <!--Spacer-->
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Simple Youtube To MP3 Converter" FontSize="24" HorizontalAlignment="Center"/>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0, 10">
            <TextBox x:Name="YoutubeLinkInput" Width="600" Height="50" FontSize="12" VerticalAlignment="Center"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10">
            <Label Content="Directory not selected..." x:Name="DirectoryLabel"/>
            <Button x:Name="DirectorySelectorButton" Content="Choose directory" Click="DirectorySelectorButton_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="3">
            <Button x:Name="DownloadButton" Content="Download" Width="150" FontSize="15" Click="DownloadButton_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="4">
            <Label x:Name="StatusLabel" Content=""/>
        </StackPanel>
    </Grid>
</Window>
